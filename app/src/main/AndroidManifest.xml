<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rudrakaniya.mymeetings">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMeetings">
        <activity android:name=".MeetingInfo"></activity>
        <activity android:name=".EditMeeting" />
        <activity android:name=".MainActivity" />
        <activity android:name=".MeetingMessage" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.rudrakaniya.mymeetings.alarm.AlarmReceiver"/>

    </application>

</manifest>